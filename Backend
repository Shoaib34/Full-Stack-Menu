const { MongoClient } = require('mongodb');

// Define the MongoDB connection URL and database name
const url = 'mongodb://127.0.0.1:27017/food';

// Create a new MongoDB client
const client = new MongoClient(url);

// Main asynchronous function to handle MongoDB operations
async function main() {
  try {
    // Connect to the MongoDB server
    await client.connect();
    console.log('Connected to MongoDB');

    // Specify the database and collection
    const db = client.db('food');
    const collection = db.collection('menu');

    // Find all documents in the collection and convert them to an array
    const menuItems = await collection.find({}).toArray();

    // Display the retrieved menu items
    menuItems.forEach((item) => {
      console.log(item);
    });
  } finally {
    // Close the MongoDB client when done
    await client.close();
  }
}

// Call the main function and handle errors
main().catch(console.error);
